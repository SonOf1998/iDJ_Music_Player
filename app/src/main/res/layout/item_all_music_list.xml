<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/ivAllMusicItemAlbumCover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/albumCover"/>

    <TextView
            android:id="@+id/tvAllMusicItemTitle"
            android:maxLines="1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/ivAllMusicItemAlbumCover"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"/>

    <TextView
            android:id="@+id/tvAllMusicItemDuration"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/ivAllMusicItemAlbumCover"
            app:layout_constraintTop_toBottomOf="@id/tvAllMusicItemTitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

    <TextView
            android:id="@+id/tvAllMusicItemSize"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/ivAllMusicItemAlbumCover"
            app:layout_constraintTop_toBottomOf="@id/tvAllMusicItemDuration"
            android:layout_marginStart="10dp"/>

    <CheckBox
            android:id="@+id/tvAllMusicItemCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"/>

</android.support.constraint.ConstraintLayout>